{
  "name": "barberhub",
  "version": "2.0.0",
  "description": "Sistema de agendamentos inteligente para barbearias via WhatsApp com IA",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "clear && nodemon src/index.ts",
    "dev:meta": "nodemon src/index.ts",
    "cli": "ts-node src/cli.ts",
    "commit": "npx git-cz",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "keywords": ["whatsapp", "appointments", "barbershop", "ai", "chatbot", "scheduling"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@saas/architecture": "0.79.2-rc",
    "@types/express": "5.0.3",
    "@types/node": "24.2.1",
    "@types/uuid": "^10.0.0",
    "axios": "1.6.8",
    "date-fns": "2.30.0",
    "dotenv": "17.2.1",
    "express": "5.1.0",
    "form-data": "4.0.4",
    "nodemon": "3.1.10",
    "openai": "5.12.2",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "redis": "4.7.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "commitlint": "^12.1.4",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-loader": "^9.2.3",
    "tsconfig-paths": "4.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "echo '>> Pre-commit checks' && lint-staged && yarn prettier -w ."
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js, jsx}": [
      "prettier --write"
    ]
  }
}
